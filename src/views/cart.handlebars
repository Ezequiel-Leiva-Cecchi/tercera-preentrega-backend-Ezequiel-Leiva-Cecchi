<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Shopping Cart</h1>

    <!-- Mostrar productos en el carrito -->
    {{#if cart.length}}
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each cart}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>${{this.price}}</td>
                        <td>{{this.quantity}}</td>
                        <td>${{this.subtotal}}</td>
                        <td>
                            <button onclick="buyProduct('{{this.id}}')">Buy</button>
                            <button onclick="deleteProduct('{{this.id}}')">Delete</button>
                            <!-- Agrega más botones o funciones según sea necesario -->
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

        <!-- Mostrar total de productos y precio total -->
        <p>Total Products: {{totalProducts}}</p>
        <p>Total Price: ${{totalPrice}}</p>

        <!-- Botones de acción en el carrito -->
        <button onclick="buyAllProducts()">Buy All</button>
        <button onclick="deleteAllProducts()">Delete All</button>
    {{else}}
        <p>No products in the cart.</p>
    {{/if}}

    <script src="/script.js"></script>
</body>
</html>
